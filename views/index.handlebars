

<div class="container">

    <div class="row">
        <div class="col-md-12">
            <img src="/assets/images/burgers.jpg" alt="burger" class="img-responsive center-block">
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center">Burgers For All!</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-5">
            <h2>Choose your burger!</h2>

<ul>
    {{#each burgers}}
        {{#unless devoured}}
        <li>
            <h5>{{this.id}}. {{this.burger_name}}
                <form action="burgers/updateOne/{{this.id}}?_method=PUT" method="POST">
                    <input type="radio" name="devoured" value="true">
                    <button type="submit" class="btn btn-default">Devour The Burger</button>
                </form>
            </h5>
        </li>
        {{/unless}}
        {{/each}}
</ul>
        </div>

        <div class="col-md-2"></div>

        <div class="col-md-5">
            <h3>Devoured Burgers</h3>
            <ul>
                {{#each burgers}}
                    {{#if this.devoured}}
                        <li>
                            <h5 class="text-muted">{{this.id}}.{{this.burger_name}}</h5>
                        </li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <br><br>

    <div class="row">
        <div class="col-md-12 text-center">
            <form class="create-update-form" action="burgers/insertOne" method="POST">
                <div class="form-group">
                    <input type="text" id="burg" name="burger_name">
                    <br>
                    <button class="btn btn-default" type="submit">Submit</button>
                    <h5 class="text-center">Choose the burger you would like to eat then click the Submit button</h5>
                </div>
            </form>
        </div>
    </div>



</div>